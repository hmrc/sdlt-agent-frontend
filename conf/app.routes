# microservice specific routes

->          /hmrc-frontend                               hmrcfrontend.Routes

GET         /                                            controllers.IndexController.onPageLoad()

GET         /assets/*file                                controllers.Assets.versioned(path="/public", file: Asset)

GET         /refresh-session                             controllers.KeepAliveController.keepAlive()

GET         /there-is-a-problem                          controllers.JourneyRecoveryController.onPageLoad(continueUrl: Option[RedirectUrl] ?= None)

GET         /account/sign-out-survey                     controllers.auth.AuthController.signOut()
GET         /account/sign-out                            controllers.auth.AuthController.signOutNoSurvey()
GET         /account/signed-out                          controllers.auth.SignedOutController.onPageLoad()

GET         /unauthorised                                controllers.UnauthorisedController.onPageLoad()

GET         /agent-details/agent-overview                controllers.manageAgents.AgentOverviewController.onPageLoad(paginationIndex: Int)
POST        /agent-details/start-add-agent               controllers.manageAgents.StartAddAgentController.onSubmit()

GET         /agent-details/agent-name                    controllers.manageAgents.AgentNameController.onPageLoad(mode: Mode = NormalMode)
POST        /agent-details/agent-name                    controllers.manageAgents.AgentNameController.onSubmit(mode: Mode = NormalMode)
GET         /agent-details/check-agent-name              controllers.manageAgents.AgentNameController.onPageLoad(mode: Mode = CheckMode)
POST        /agent-details/check-agent-name              controllers.manageAgents.AgentNameController.onSubmit(mode: Mode = CheckMode)
GET         /agent-details/agent-name-warning            controllers.manageAgents.WarningAgentNameController.onPageLoad(mode: Mode = NormalMode)
POST        /agent-details/agent-name-warning            controllers.manageAgents.WarningAgentNameController.onSubmit(mode: Mode = NormalMode)
GET         /agent-details/check-agent-name-warning      controllers.manageAgents.WarningAgentNameController.onPageLoad(mode: Mode = CheckMode)
POST        /agent-details/check-agent-name-warning      controllers.manageAgents.WarningAgentNameController.onSubmit(mode: Mode = CheckMode)

GET         /agent-details/find-address                  controllers.manageAgents.AddressLookupController.onPageLoad(mode: Mode = NormalMode)
GET         /agent-details/address-lookup                controllers.manageAgents.AddressLookupController.onSubmit(mode: Mode = NormalMode)

GET         /agent-details/check-address-lookup          controllers.manageAgents.AddressLookupController.onPageLoad(mode: Mode = CheckMode)
GET         /agent-details/save-address-lookup           controllers.manageAgents.AddressLookupController.onSubmit(mode: Mode = CheckMode)

GET         /agent-details/agent-contact-details         controllers.manageAgents.AgentContactDetailsController.onPageLoad(mode: Mode = NormalMode)
POST        /agent-details/agent-contact-details         controllers.manageAgents.AgentContactDetailsController.onSubmit(mode: Mode = NormalMode)
GET         /agent-details/check-agent-contact-details   controllers.manageAgents.AgentContactDetailsController.onPageLoad(mode: Mode = CheckMode)
POST        /agent-details/check-agent-contact-details   controllers.manageAgents.AgentContactDetailsController.onSubmit(mode: Mode = CheckMode)

GET         /agent-details/check-your-answers            controllers.manageAgents.CheckYourAnswersController.onPageLoad(agentReferenceNumber: Option[String])
POST        /agent-details/submit-agent                  controllers.manageAgents.CheckYourAnswersController.onSubmit(agentReferenceNumber: Option[String])

GET         /agent-details/remove-agent                  controllers.manageAgents.RemoveAgentController.onPageLoad(agentReferenceNumber: String)
POST        /agent-details/remove-agent                  controllers.manageAgents.RemoveAgentController.onSubmit(agentReferenceNumber: String)

GET         /agent-details/unauthorised/organisation     controllers.manageAgents.UnauthorisedOrganisationAffinityController.onPageLoad()
