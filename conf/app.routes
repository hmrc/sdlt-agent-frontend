# microservice specific routes

->          /hmrc-frontend                               hmrcfrontend.Routes

GET         /                                            controllers.IndexController.onPageLoad()

GET         /assets/*file                                controllers.Assets.versioned(path="/public", file: Asset)

GET         /refresh-session                             controllers.KeepAliveController.keepAlive()

GET         /there-is-a-problem                          controllers.JourneyRecoveryController.onPageLoad(continueUrl: Option[RedirectUrl] ?= None)
GET         /access-denied                               controllers.AccessDeniedController.onPageLoad()

GET         /page-not-found                              controllers.PageNotFoundController.onPageLoad()

GET         /account/sign-out-survey                     controllers.auth.AuthController.signOut()
GET         /account/sign-out                            controllers.auth.AuthController.signOutNoSurvey()
GET         /account/signed-out                          controllers.auth.SignedOutController.onPageLoad()

GET         /unauthorised                                controllers.UnauthorisedController.onPageLoad()
GET         /unauthorised/individual                     controllers.manageAgents.UnauthorisedIndividualAffinityController.onPageLoad()
GET         /manage-agents/unauthorised/organisation     controllers.manageAgents.UnauthorisedOrganisationAffinityController.onPageLoad()

GET         /manage-agents/agent-overview                controllers.manageAgents.AgentOverviewController.onPageLoad(paginationIndex: Int)
GET         /manage-agents/start-add-agent               controllers.manageAgents.StartAddAgentController.onPageLoad()

GET         /manage-agents/agent-name                    controllers.manageAgents.AgentNameController.onPageLoad(mode: Mode = NormalMode)
POST        /manage-agents/agent-name                    controllers.manageAgents.AgentNameController.onSubmit(mode: Mode = NormalMode)
GET         /manage-agents/change-agent-name              controllers.manageAgents.AgentNameController.onPageLoad(mode: Mode = CheckMode)
POST        /manage-agents/change-agent-name              controllers.manageAgents.AgentNameController.onSubmit(mode: Mode = CheckMode)
GET         /manage-agents/agent-name-warning            controllers.manageAgents.WarningAgentNameController.onPageLoad(mode: Mode = NormalMode)
POST        /manage-agents/agent-name-warning            controllers.manageAgents.WarningAgentNameController.onSubmit(mode: Mode = NormalMode)
GET         /manage-agents/change-agent-name-warning      controllers.manageAgents.WarningAgentNameController.onPageLoad(mode: Mode = CheckMode)
POST        /manage-agents/change-agent-name-warning      controllers.manageAgents.WarningAgentNameController.onSubmit(mode: Mode = CheckMode)

GET         /manage-agents/find-address                  controllers.manageAgents.AddressLookupController.onPageLoad(mode: Mode = NormalMode)
GET         /manage-agents/address-lookup                controllers.manageAgents.AddressLookupController.onSubmit(mode: Mode = NormalMode)

GET         /manage-agents/change-address-lookup          controllers.manageAgents.AddressLookupController.onPageLoad(mode: Mode = CheckMode)
GET         /manage-agents/save-address-lookup           controllers.manageAgents.AddressLookupController.onSubmit(mode: Mode = CheckMode)

GET         /manage-agents/add-contact-details   controllers.manageAgents.ConfirmAgentContactDetailsController.onPageLoad()
POST        /manage-agents/add-contact-details   controllers.manageAgents.ConfirmAgentContactDetailsController.onSubmit()
GET         /manage-agents/enter-contact-details         controllers.manageAgents.AgentContactDetailsController.onPageLoad(mode: Mode = NormalMode)
POST        /manage-agents/enter-contact-details         controllers.manageAgents.AgentContactDetailsController.onSubmit(mode: Mode = NormalMode)
GET         /manage-agents/change-enter-contact-details   controllers.manageAgents.AgentContactDetailsController.onPageLoad(mode: Mode = CheckMode)
POST        /manage-agents/change-enter-contact-details   controllers.manageAgents.AgentContactDetailsController.onSubmit(mode: Mode = CheckMode)

GET         /manage-agents/check-answers            controllers.manageAgents.CheckYourAnswersController.onPageLoad(agentReferenceNumber: Option[String])
POST        /create/predefined-agent                     controllers.manageAgents.CheckYourAnswersController.onSubmit(agentReferenceNumber: Option[String])

GET         /manage-agents/remove-agent                  controllers.manageAgents.RemoveAgentController.onPageLoad(agentReferenceNumber: String)
POST        /manage-agents/remove-agent                  controllers.manageAgents.RemoveAgentController.onSubmit(agentReferenceNumber: String)

GET        /system-error/there-is-a-problem              controllers.SystemErrorController.onPageLoad()